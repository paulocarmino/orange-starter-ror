<div class="flex justify-center items-center w-screen h-screen text-center" data-controller="hello">
  <div class="flex flex-col items-center">
    <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white">Starting your project fast with <span class="underline underline-offset-3 decoration-8 decoration-amber-500 dark:decoration-amber-600">Orange Starter</span></h1>
    <p class="flex gap-2 mb-6 text-lg font-normal text-gray-500 lg:text-xl sm:px-16 xl:px-48 dark:text-gray-400">Edit this page in<span class="inline-flex items-center px-2.5 py-0.5 text-xs font-medium text-gray-800 bg-gray-100 rounded border border-gray-500 me-2 dark:bg-gray-700 dark:text-gray-400">/app/views/pages/home.html.erb</span></p>

    <div class="mt-6">
      <% if current_user %>
        <p class="mb-2">Hello, <%= current_user.email %></p>
        <%= link_to "Logout", destroy_user_session_path, class: "inline-flex justify-center items-center px-5 py-3 text-base font-medium text-center text-white bg-amber-500 rounded-lg hover:bg-amber-600 focus:ring-4 focus:ring-amber-300 dark:focus:ring-amber-600", data: { turbo_method: :delete } %>
      <% else %>
        <div class="flex gap-4">
          <%= link_to "Login", new_user_session_path, class: "inline-flex justify-center items-center px-5 py-3 text-base font-medium text-center text-white bg-amber-500 rounded-lg hover:bg-amber-600 focus:ring-4 focus:ring-amber-300 dark:focus:ring-amber-600" %>
          <%= link_to "Sign up", new_user_registration_path, class: "inline-flex justify-center items-center px-5 py-3 text-base font-medium text-center text-white bg-amber-500 rounded-lg hover:bg-amber-600 focus:ring-4 focus:ring-amber-300 dark:focus:ring-amber-600" %>
        </div>
      <% end %>
    </div>

    <% if current_user %>
      <%= link_to protected_path, class: "inline-flex justify-center items-center px-5 py-3 mt-6 text-base font-medium text-center text-white bg-amber-500 rounded-lg hover:bg-amber-600 focus:ring-4 focus:ring-amber-300 dark:focus:ring-amber-600" do %>
        Proctected Page
        <svg class="w-3.5 h-3.5 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
      <% end %>
    <% end %>
  </div>

</div>