<div class="flex flex-col justify-center py-12 min-h-full sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-2xl font-bold tracking-tight leading-9 text-center text-gray-900">Log in</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="px-6 py-12 bg-white shadow sm:rounded-lg sm:px-12">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "block py-1.5 w-full text-gray-900 rounded-md border-0 ring-1 ring-inset ring-gray-300 shadow-sm placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-amber-500 sm:text-sm sm:leading-6" %>
        </div>

        <div>
          <div class="field">
            <%= f.label :password, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "block py-1.5 w-full text-gray-900 rounded-md border-0 ring-1 ring-inset ring-gray-300 shadow-sm placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-amber-500 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="flex justify-between items-center">
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <input id="remember_me" name="remember_me" type="checkbox" class="w-4 h-4 text-amber-500 rounded border-gray-300 focus:ring-amber-500">
              <label for="remember_me" class="block ml-3 text-sm leading-6 text-gray-900">Remember me</label>
            </div>
          <% end %>

          <div class="text-sm leading-6">
            <a href="#" class="font-semibold text-amber-500 hover:text-amber-600">Forgot password?</a>
          </div>
        </div>

        <div>
          <button type="submit" class="flex justify-center px-3 py-1.5 w-full text-sm font-semibold leading-6 text-white bg-amber-500 rounded-md shadow-sm hover:bg-amber-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-amber-700">Sign in</button>
        </div>
      <% end %>

      <div>
        <div class="relative mt-10">
          <div class="flex absolute inset-0 items-center" aria-hidden="true">
            <div class="w-full border-t border-gray-200"></div>
          </div>
          <div class="flex relative justify-center text-sm font-medium leading-6">
            <span class="px-6 text-gray-900 bg-white">Or continue with</span>
          </div>
        </div>

        <div class="grid grid-cols-1 gap-4 mt-6">
          <a href="#" class="flex w-full items-center justify-center gap-3 rounded-md bg-[#24292F] px-3 py-1.5 text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#24292F]">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-semibold leading-6">GitHub</span>
          </a>
        </div>
      </div>
    </div>

    <p class="mt-10 text-sm text-center text-gray-500">
      <%= render "devise/shared/links" %>
    </p>
  </div>
</div>
